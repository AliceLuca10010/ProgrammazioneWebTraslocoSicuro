                <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB"
                    crossorigin="anonymous">
                <link rel="stylesheet" href="../css/style.css" type="text/css">
</head>

<body>
    <div class="container">
        <div class="row banner p-2">

            <div class="col-sm-2 col-xs-2 col-lg-2 col-md-2 btn-group dropup">
                <button type="button" class="btn btn-custom ">
                    <a href="..">Home</a>

                </button>
            </div>


            <div class="col-sm-2 col-xs-2 col-lg-2 col-md-2 btn-group dropup">

                <button type="button" class="btn btn-custom dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Azienda </button>
                <div class="dropdown-menu">
                    <a class="dropdown-item" href="/chiSiamo">Chi Siamo</a>
                    <a class="dropdown-item" href="/doveSiamo">Dove Siamo</a>
                    <a class="dropdown-item" href="/contattaci">Contattaci</a>
                </div>


            </div>
            <div class="col-sm-2 col-xs-2 col-lg-2 col-md-2 btn-group dropup">

                <button type="button" class="btn btn-custom dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Informazioni </button>
                <div class="dropdown-menu">
                    <a class="dropdown-item" href="/comeFunziona">Come funziona</a>
                    <a class="dropdown-item" href="/servizi">Servizi</a>
                    <a class="dropdown-item" href="/conChiLavoriamo">Con chi lavoriamo</a>
                </div>
            </div>
            <div class="col-sm-2 col-xs-2 col-lg-2 col-md-2 btn-group dropup">

                <button type="button" class="btn btn-custom dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Condizioni </button>
                <div class="dropdown-menu">
                    <a class="dropdown-item" href="/condizioniDiVendita">Condizioni di Vendita</a>
                    <a class="dropdown-item" href="/informativaSullaPrivacy">Informativa sulla Privacy</a>
                </div>
            </div>

            <div class="col-sm-2 col-xs-2 col-lg-2 col-md-2 btn-group dropup">

                <button type="button" class="btn btn-custom dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Pagina Personale </button>
                <div class="dropdown-menu">
                    <a class="dropdown-item" href="/modificaInfo">Modifica Informazioni</a>
                    <a class="dropdown-item" href="/prenotazione">Prenota Appuntamento</a>
                    <a class="dropdown-item" href="/iMieiAppuntamenti">I miei appuntamenti</a>
                    <a class="dropdown-item" href="/logout">Esci</a>
                </div>


            </div>


            <% if (DatiPrenotazione) { %>

        </div>
        <div class="row">
            <div class="col">
                <h2 class="pt-4 text-center">Riepilogo del tuo appuntamento con la ditta:</h2>
                <h3 class="text-center text-danger"><%=DatiPrenotazione.traslocatore.nomeAzienda%> con sede in: <%=DatiPrenotazione.traslocatore.indirizzoAzienda%></h3>

            </div>
        </div>
        <div class="row p-4">
            <div class=col>

                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th scope="col">Indirizzo di carico:</th>
                            <th scope="col">Indirizzo di scarico:</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                <%=DatiPrenotazione.viaPartenza%>,
                                    <%=DatiPrenotazione.numeroCivicoPartenza%>
                            </td>
                            <td>
                                <%=DatiPrenotazione.viaArrivo%>,
                                    <%=DatiPrenotazione.numeroCivicoArrivo%>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <%=DatiPrenotazione.cittaPartenza%> (
                                    <%=DatiPrenotazione.provinciaPartenza%>),
                                        <%=DatiPrenotazione.capPartenza%>
                            </td>
                            <td>
                                <%=DatiPrenotazione.cittaArrivo%> (
                                    <%=DatiPrenotazione.provinciaArrivo%>),
                                        <%=DatiPrenotazione.capArrivo%>
                            </td>
                        </tr>
                        <tr>
                            <td><%=DatiPrenotazione.statoPartenza%> </td>
                            <td><%=DatiPrenotazione.statoArrivo%> </td>
                        </tr>
                        <tr>
                            <td>Piano: <%=DatiPrenotazione.pianoPartenza%> </td>
                            <td>Piano: <%=DatiPrenotazione.pianoArrivo%> </td>
                        </tr>
                        <tr>
                            <td>Ascensore: <%if (DatiPrenotazione.ascensorePartenza){%>SI<%}else{%>NO<%}%></td>
                            <td>Ascensore: <%if (DatiPrenotazione.ascensoreArrivo){%>SI<%}else{%>NO<%}%></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <div class="row">
            <div class="col">
                <h3 class="p-4 text-center">Informazioni Abitazione</h3>

            </div>
        </div>
        <div class="row">
            <div class="col text-center interlinea">
                <p>Stanze interessate dal trasloco:</p>
            </div>
        </div>

        <div class="row">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th scope="col">Stanza</th>
                        <th scope="col">Costo</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Cucina</td>
                        <td class="text-right">Costo</td>
                    </tr>
                    <tr>
                        <td>Salone</td>
                        <td class="text-right">Costo</td>
                    </tr>
                    <tr>
                        <td> Salone 2 </td>
                        <td class="text-right">Costo </td>
                    </tr>
                    <tr>
                        <td> Sala da pranzo </td>
                        <td class="text-right">Costo </td>
                    </tr>
                    <tr>
                        <td> Camera </td>
                        <td class="text-right">Costo </td>
                    </tr>
                    <tr>
                        <td> Camera 2 </td>
                        <td class="text-right">Costo </td>
                    </tr>
                    <tr>
                        <td> Cameretta </td>
                        <td class="text-right">Costo </td>
                    </tr>
                    <tr>
                        <td> Cameretta 2 </td>
                        <td class="text-right">Costo </td>
                    </tr>
                    <tr>
                        <td> Bagno </td>
                        <td class="text-right">Costo </td>
                    </tr>
                    <tr>
                        <td> Bagno 2 </td>
                        <td class="text-right"> Costo </td>
                    </tr>
                    <tr>
                        <td> Ingresso </td>
                        <td class="text-right">Costo </td>
                    </tr>
                    <tr>
                        <td> Studio </td>
                        <td class="text-right">Costo </td>
                    </tr>
                    <tr>
                        <td> Balcone </td>
                        <td class="text-right">Costo </td>
                    </tr>
                    <tr>
                        <td> Soffitta </td>
                        <td class="text-right">Costo </td>
                    </tr>
                    <tr>
                        <td> Giardino </td>
                        <td class="text-right">Costo </td>
                    </tr>
                    <tr>
                        <td> Box/Garage </td>
                        <td class="text-right">Costo </td>
                    </tr>
                    <tr>
                        <td> Ripostiglio </td>
                        <td class="text-right">Costo </td>
                    </tr>
                    <tr>
                        <td> Cantina </td>
                        <td class="text-right">Costo </td>
                    </tr>
                </tbody>
            </table>

        </div>
        <div class="row">
            <div class="col">
                <h3 class="p-4 text-center"> Servizi Aggiuntivi Scelti</h3>

            </div>
        </div>

        <div class="row">


            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th scope="col">Servizi Aggiuntivi</th>
                        <th scope="col">Scelto</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Imballaggio</td>
                        <td>sì/no</td>
                    </tr>
                    <tr>
                        <td>Smontaggio/Rimontaggio</td>
                        <td>sì/no</td>
                    </tr>
                    <tr>
                        <td>Deposito Merci </td>
                        <td>sì/no</td>
                    </tr>

                </tbody>
            </table>


        </div>

        <div class="row">
            <div class="col p-5">
                <h5>Costo totale:
                    <%=costoTotale%> €
                </h5>
                <p>Il costo è comprensivo delle maggiorazioni dovute alla difficoltà del trasloco e delle distanze. </p>
            </div>
        </div>
        <% if (!preventivoConfermato) {%>
            <form action="/confermaPreventivo" method="POST">
                <div class="row">
                    <div class="col p-3 text-center">
                        <button type="submit" class="btn btn-info">Conferma</button>
                    </div>
                </div>
            </form>
            <% } %>
                <% } else { %>
                    <div class="container p-5">
                        <div class="row">
                            <div class="col text-center">
                                <h3 class="text-center">Non hai ancora effettuato nessuna prenotazione</h3>
                            </div>
                        </div>
                    </div>
                    <% } %>




    </div>


















    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
        crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49"
        crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js" integrity="sha384-smHYKdLADwkXOn1EmN1qk/HfnUcbVRZyYmZ4qpPea6sjB/pTJ0euyQp0Mk8ck+5T"
        crossorigin="anonymous"></script>
</body>


</html>